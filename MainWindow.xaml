<Window x:Class="AutoSorterExtended.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoSorterExtended"
        mc:Ignorable="d"
        Title="Поиск файлов"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SelectedFolderTextBox"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     Margin="10"
                     VerticalAlignment="Center"
                     Background="{x:Null}"
                     BorderBrush="{x:Null}"
                     Text="Выберите папку..." />

            <Button x:Name="SelectFolderButton"
                    Content="Выбрать папку"
                    Margin="10"
                    Width="170"
                    Click="SelectFolderButton_Click"
                    Grid.Column="1" />
        </Grid>

        <TextBox Grid.Row="1"
                 x:Name="FileNamePatternTextBox"
                 Style="{StaticResource PlaceholderTextBoxStyle}"
                 Tag="Введите шаблон наименования файла"
                 Margin="10" />

        <TextBox Grid.Row="2"
                 x:Name="TimeDifferenceTextBox"
                 Style="{StaticResource PlaceholderTextBoxStyle}"
                 Tag="Введите макс разницу (сек)"
                 Margin="10"
                 Width="170"
                 HorizontalAlignment="Right" />

        <Button Grid.Row="3"
                x:Name="SearchButton"
                Content="Поиск"
                Margin="10"
                Width="170"
                HorizontalAlignment="Right"
                Click="SearchButton_Click" />

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="РЕЗУЛЬТАТЫ"
                       Margin="10"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Grid.Row="0" />

            <ScrollViewer Margin="10,0,10,10"
                          VerticalScrollBarVisibility="Auto"
                          Grid.Row="1">
                <TextBox x:Name="ResultsTextBox"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
